include (./fontrev);
include (../features.family);

table OS/2 {
	Panose 2 0 5 3 5 0 0 9 0 3;
	FSType 0;
} OS/2;

feature liga {
	lookup LIGATURES;
} liga;

feature case {
	pos at <12 100 0 0>;
	pos [questiondown exclamdown] <26 200 0 0>;
	pos [guillemotleft guillemotright guilsinglleft guilsinglright] <3 20 0 0>;
	pos periodcentered <11 90 0 0>;
} case;


# Kerning is translated from AFM files on build.
# See the build.sh for details.

feature kern {
	include (./features.kern);
} kern;
