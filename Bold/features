# Font-specific feature file for Kontrapunkt Pro project directory
# Copyright 2012 Grzegorz Rolek


include (./fontrev);
include (../features.family);

table OS/2 {
	Panose 2 0 8 3 5 0 0 2 0 3;
	FSType 0;
} OS/2;

feature liga {
	lookup LIGATURES;
} liga;

feature case {
	pos @CASE_PUNCTUATION <0 100 0 0>;
	pos [questiondown exclamdown] <0 200 0 0>;
	pos periodcentered <0 90 0 0>;
	pos slash <44 100 0 0>;
	pos backslash <-44 100 0 0>;
} case;


# Kerning internal to each subfamily's charset is translated from AFM files on build.
# See the build.sh for details.
# Kerning across the charsets is listed directly.

feature kern {
	pos ff t -5;
	pos ff b 24;
	pos ff quoteright 56;
	include (./features.kern);
} kern;
