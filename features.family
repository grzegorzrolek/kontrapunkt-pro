@CASE_PUNCTUATION = [at hyphen endash emdash bar parenleft parenright bracketleft bracketright braceleft braceright guillemotleft guilsinglleft guilsinglright guillemotright];

languagesystem DFLT dflt;
languagesystem latn dflt;

lookup LIGATURES {
	sub f f i by ffi;
	sub f f l by ffl;
	sub f i by fi;
	sub f l by fl;
	sub f f by ff;
	sub f j by fj;
} LIGATURES;


